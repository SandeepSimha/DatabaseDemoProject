<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your name"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Designation"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_designation"
        android:padding="5dp"
        android:singleLine="true"
        android:text="EmpId-123"
        android:textColor="@color/blue"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_name"
        android:layout_alignBottom="@+id/txt_name"
        android:layout_alignRight="@+id/txt_name"
        android:text="DELETE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_delete"
        android:layout_alignTop="@+id/txt_designation"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="UPDATE"
        android:textStyle="bold" />

</RelativeLayout>